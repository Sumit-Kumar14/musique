<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#413743">
    <RelativeLayout
        android:orientation="vertical"
        android:background="#413743"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:id="@+id/cover"
            android:src="@drawable/party"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:id="@+id/cover_gray"
            android:background="#99413743"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/imageView5" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back"
            android:scaleType="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="WAITING FOR THE END"
            android:layout_below="@+id/back"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/also_known_as"
            android:layout_below="@+id/name"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:text="LINKIN PARK"
            android:textColor="#EEE"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/also_known_as"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/ic_skip_previous_white_24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/ic_pause_white_24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:id="@+id/gender"
                    android:gravity="center"
                    android:background="@drawable/ic_skip_next_white_24dp" />
            </LinearLayout>
        </LinearLayout>

        <com.infinity.musique.ui.Triangle
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/cover"
            android:id="@+id/view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SONGS"
            android:id="@+id/birth_country"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFF"
            android:layout_marginLeft="32dp"
            android:layout_below="@+id/birthday" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="10dp"
            app:fabSize="normal"
            app:rippleColor="#CCC"
            android:src="@drawable/ic_mode_edit_white_24dp"
            app:backgroundTint="#ef6c00"
            android:layout_alignBottom="@+id/cover"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:id="@+id/fab" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/person_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="3dp"
            app:civ_border_color="#bdbdbd"
            android:src="@drawable/temp1"
            android:layout_alignTop="@+id/fab"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthday"
            android:text="125"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_alignTop="@+id/view"
            android:layout_alignLeft="@+id/birth_country"
            android:layout_alignStart="@+id/birth_country" />
    </RelativeLayout>
</ScrollView>